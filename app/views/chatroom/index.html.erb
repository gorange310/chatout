<h3 class="ui center aligned icon header">
  <i class="inverted circular orange comment alternate icon"></i>
  Ready to join our chat? 
</h3>


<div class="ui two column grid">
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical teal pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: messages_path) do |f| %>
        <div class="field">
          <div class="ui fluid icon input">
            <%= f.text_field :text, placeholder:"Enter a message..." %>
            <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>